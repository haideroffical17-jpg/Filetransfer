<body>

    <!-- This is the HTML structure of the application -->
    <div class="translator-container">
        <h1>Translator</h1>
        <p>Translate text into different languages with this simple tool.</p>

        <!-- Text area for user to enter text -->
        <div class="input-container">
            <textarea id="text-input" placeholder="Enter text to translate..."></textarea>
        </div>

        <!-- Controls for language selection and the translate button -->
        <div class="controls">
            <div class="language-select-container">
                <label for="language-select">Translate To:</label>
                <!-- Dropdown will be filled with languages by JavaScript -->
                <select id="language-select">
                    <option>Loading languages...</option>
                </select>
            </div>
            <button id="translate-btn">Translate</button>
        </div>

        <!-- Area to display the translated result -->
        <div class="output-container">
            <h2>Translated Text</h2>
            <div id="translated-output" class="output-box">
                Your translation will appear here...
            </div>
        </div>
        
        <footer>
            <p>Powered by <a href="https://libretranslate.com/" target="_blank">LibreTranslate</a></p>
        </footer>
    </div>

    <!-- JavaScript logic is included directly in the HTML file inside the <script> tag -->
    <script>
        // Wait for the HTML document to be fully loaded before running the script
        document.addEventListener('DOMContentLoaded', () => {
            
            // Get references to the important HTML elements
            const languageSelect = document.getElementById('language-select');
            const textInput = document.getElementById('text-input');
            const translateBtn = document.getElementById('translate-btn');
            const translatedOutput = document.getElementById('translated-output');
            
            // API endpoint for LibreTranslate
            const libreTranslateAPI = 'https://libretranslate.de';

            // --- Function to load all available languages into the dropdown ---
            async function loadLanguages() {
                try {
                    // Fetch the list of languages from the API
                    const response = await fetch(`${libreTranslateAPI}/languages`);
                    const languages = await response.json();
                    
                    // Clear the "Loading..." message
                    languageSelect.innerHTML = '';

                    // Add each language as an option in the dropdown
                    languages.forEach(lang => {
                        const option = document.createElement('option');
                        option.value = lang.code; // e.g., 'en', 'es', 'fr'
                        option.textContent = lang.name; // e.g., 'English', 'Spanish', 'French'
                        languageSelect.appendChild(option);
                    });

                } catch (error) {
                    console.error('Error loading languages:', error);
                    translatedOutput.textContent = 'Failed to load languages. Please check your internet connection.';
                }
            }

            // --- Function to translate the text ---
            async function translateText() {
                const textToTranslate = textInput.value;
                const targetLanguage = languageSelect.value;
                
                // If there's no text, do nothing
                if (!textToTranslate.trim()) {
                    return;
                }
                
                // Show a loading message and disable the button to prevent multiple clicks
                translatedOutput.textContent = 'Translating...';
                translateBtn.disabled = true;
                translateBtn.textContent = 'Translating...';

                try {
                    // Send a POST request to the translation API
                    const response = await fetch(`${libreTranslateAPI}/translate`, {
                        method: 'POST',
                        body: JSON.stringify({
                            q: textToTranslate,       // The text to translate
                            source: 'auto',           // Auto-detect the source language
                            target: targetLanguage,   // The language to translate to
                            format: 'text'
                        }),
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    // If the request was not successful, throw an error
                    if (!response.ok) {
                        throw new Error('Translation request failed.');
                    }
                    
                    // Parse the JSON response
                    const data = await response.json();
                    
                    // Display the translated text
                    translatedOutput.textContent = data.translatedText;

                } catch (error) {
                    console.error('Error translating text:', error);
                    translatedOutput.textContent = 'An error occurred during translation. Please try again.';
                } finally {
                    // Re-enable the button after the translation is complete or an error occurs
                    translateBtn.disabled = false;
                    translateBtn.textContent = 'Translate';
                }
            }

            // --- Event Listeners ---
            
            // Call the function to load languages when the page loads
            loadLanguages();
            
            // Add a click event listener to the translate button
            translateBtn.addEventListener('click', translateText);
        });
    </script>

</body>
</html>
